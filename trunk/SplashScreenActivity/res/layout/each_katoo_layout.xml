<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/click_relative"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:paddingLeft="4dp" >

        <View
            android:id="@+id/view1"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="#BEBEBE"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/commentPost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/text_item"
            android:layout_alignRight="@+id/text_item"
            android:layout_below="@+id/text_item"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#19000000" />

        <TextView
            android:id="@+id/text_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/imageView1"
            android:layout_toRightOf="@+id/image_item"
            android:singleLine="true"
            android:text="ข้อมูลพฤติกรรมและความเชื่อมโยงของ Social Network ไทย"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/commentTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/commentPost"
            android:layout_alignRight="@+id/commentPost"
            android:layout_below="@+id/commentPost"
            android:singleLine="true"
            android:text="Small Text"
            android:textColor="#19000000"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignRight="@+id/view1"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/chevron15" />

        <ImageView
            android:id="@+id/image_item"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/view1"
            android:layout_alignTop="@+id/text_item"
            android:layout_marginLeft="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/katoolistshow" />

    </RelativeLayout>

</LinearLayout>